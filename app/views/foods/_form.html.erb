<%= form_for(food) do |f| %>
  <% if food.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(food.errors.count, "error") %> prohibited this food from being saved:</h2>

      <ul>
      <% food.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :info %>
    <%= f.text_area :info %>
  </div>

  <div class="field">
    <%= f.label :food_category_id %>
    <%= select(
      "food",
      "food_category_id",
      FoodCategory.all.collect { |p| [ p.name, p.id ] },
      { include_blank: 'None' })
    %>
  </div>

  <div class="field">
    <%= f.label :risk %>
    <%= f.text_field :risk %>
  </div>

  <div class="field">
    <%= f.label :danger %>
    <%= f.number_field :danger %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
