<p id="notice"><%= notice %></p>

<h1>Foods (<%= @foods.size %>)</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Info</th>
      <th>Food category</th>
      <th>Risk</th>
      <th>Danger</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @foods.each do |food| %>
      <tr>
        <td><%= food.name %></td>
        <td><%= food.info %></td>
        <td><%= link_to(food.food_category.name, food.food_category) %></td>
        <td><%= link_to(food.food_risk.name, food.food_risk) if food.food_risk %></td>
        <td><%= food.danger.capitalize %></td>
        <td><%= link_to 'Show', food %></td>
        <td><%= link_to 'Edit', edit_food_path(food) %></td>
        <td><%= link_to 'Destroy', food, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Food', new_food_path %>
