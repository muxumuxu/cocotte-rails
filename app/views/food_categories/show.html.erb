<p id="notice"><%= notice %></p>

<p>
  <strong>Id:</strong>
  <%= @food_category.id %>
</p>

<p>
  <strong>Name:</strong>
  <%= @food_category.name %>
</p>

<%= link_to 'Edit', edit_food_category_path(@food_category) %> |
<%= link_to 'Back', food_categories_path %>

<h4>Foods (<%= @food_category.foods.size %>)</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Food category</th>
      <th>Info</th>
      <th>Risk</th>
      <th>Danger</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @food_category.foods.each do |food| %>
      <tr>
        <td><%= food.name %></td>
        <td><%= food.food_category.name.capitalize %></td>
        <td><%= food.info %></td>
        <td><%= food.food_risk.name if food.food_risk %></td>
        <td><%= food.danger %></td>
        <td><%= link_to 'Show', food %></td>
        <td><%= link_to 'Edit', edit_food_path(food) %></td>
        <td><%= link_to 'Destroy', food, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
